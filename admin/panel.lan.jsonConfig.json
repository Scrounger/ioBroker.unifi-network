{
    "label": "LAN",
    "items": {
        "donation_link": {
            "type": "staticLink",
            "text": "You like the adapter? Then support me.",
            "sm": 12,
            "button": true,
            "newLine": true,
            "href": "https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&hosted_button_id=VWAXSTS634G88&source=url",
            "style": {
                "justifyContent": "flex-start !important"
            }
        },
        "dividerLan": {
            "newLine": true,
            "type": "header",
            "text": "LAN",
            "size": 2
        },
        "lanConfigEnabled": {
            "type": "checkbox",
            "label": "LAN enabled",
            "newLine": true,
            "sm": 12,
            "md": 2
        },
        "dividerLanBlackList": {
            "newLine": true,
            "type": "header",
            "text": "LAN Blacklist / Whitelist",
            "hidden": "!data.lanConfigEnabled",
            "size": 2
        },
        "lanIsWhiteList": {
            "newLine": true,
            "type": "checkbox",
            "label": "${data.lanIsWhiteList ? 'use as whitelist' : 'use as blacklist'}",
            "hidden": "!data.lanConfigEnabled",
            "xl": 2,
            "lg": 2,
            "md": 2,
            "sm": 12,
            "xs": 12
        },
        "lanBlackList": {
            "type": "table",
            "xl": 6,
            "lg": 6,
            "md": 6,
            "sm": 12,
            "xs": 12,
            "hidden": "!data.lanConfigEnabled",
            "uniqueColumns": [
                "id"
            ],
            "confirm": {
                "condition": "!_alive",
                "title": "Attention!",
                "text": "This selection is only possible with a running instance!",
                "ok": "Got it!",
                "cancel": "cancel",
                "type": "warning"
            },
            "items": [
                {
                    "type": "autocompleteSendTo",
                    "title": "${data.lanIsWhiteList ? 'Choose which LAN should be included' : 'Choose which LAN should be excluded'}",
                    "attr": "id",
                    "filter": true,
                    "sort": true,
                    "noMultiEdit": true,
                    "jsonData": "{\"instanceID\": \"${globalData.instanceID}\",\"adapter\": \"${globalData.adapter}\"}",
                    "command": "lanList"
                }
            ]
        },
        "dividerLanBlackListStates": {
            "newLine": true,
            "type": "header",
            "text": "States Blacklist / Whitelist",
            "hidden": "!data.lanConfigEnabled",
            "size": 2
        },
        "lanStatesIsWhiteList": {
            "newLine": true,
            "type": "checkbox",
            "label": "${data.lanStatesIsWhiteList ? 'use as whitelist' : 'use as blacklist'}",
            "hidden": "!data.lanConfigEnabled",
            "xl": 2,
            "lg": 2,
            "md": 2,
            "sm": 12,
            "xs": 12
        },
        "lanStatesBlackList": {
            "type": "table",
            "xl": 6,
            "lg": 6,
            "md": 6,
            "sm": 12,
            "xs": 12,
            "hidden": "!data.lanConfigEnabled",
            "uniqueColumns": [
                "id"
            ],
            "confirm": {
                "condition": "!_alive",
                "title": "Attention!",
                "text": "This selection is only possible with a running instance!",
                "ok": "Got it!",
                "cancel": "cancel",
                "type": "warning"
            },
            "items": [
                {
                    "type": "autocompleteSendTo",
                    "title": "${data.lanStatesIsWhiteList ? 'Choose which LAN state should be included' : 'Choose which LAN state should be excluded'}",
                    "attr": "id",
                    "filter": true,
                    "sort": true,
                    "noMultiEdit": true,
                    "jsonData": "{\"instanceID\": \"${globalData.instanceID}\",\"adapter\": \"${globalData.adapter}\"}",
                    "command": "lanStateList"
                }
            ]
        }
    }
}