{
	"i18n": true,
	"type": "tabs",
	"items": {
		"tab_general": {
			"type": "panel",
			"label": "General",
			"items": {
				"donation_link": {
					"type": "staticLink",
					"text": "You like the adapter? Then support me.",
					"sm": 12,
					"button": true,
					"newLine": true,
					"href": "https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&hosted_button_id=VWAXSTS634G88&source=url",
					"style": {
						"justifyContent": "flex-start !important"
					}
				},
				"dividerCredentials": {
					"newLine": true,
					"type": "header",
					"text": "login data",
					"size": 2
				},
				"host": {
					"type": "text",
					"label": "host",
					"newLine": true,
					"sm": 12,
					"md": 3
				},
				"port": {
					"type": "number",
					"label": "port",
					"help": "port 443 is used by unifi-os (e.g. UDM-Pro)",
					"min": 0,
					"sm": 12,
					"md": 3
				},
				"site": {
					"type": "text",
					"label": "controller site",
					"help": "'default' is used by unifi-os (e.g. UDM-Pro)",
					"sm": 12,
					"md": 3
				},
				"user": {
					"type": "text",
					"label": "Username",
					"newLine": true,
					"sm": 12,
					"md": 3
				},
				"password": {
					"type": "password",
					"label": "Password",
					"sm": 12,
					"md": 3
				},
				"dividerRealTimeApi": {
					"newLine": true,
					"type": "header",
					"text": "realtime api",
					"size": 2
				},
				"realTimeApiDebounceTime": {
					"type": "number",
					"label": "debounce time",
					"help": "increase this value for low performance systems",
					"validator": "data.realTimeApiDebounceTime < (data.clientOfflineTimeout / 2)",
					"validatorErrorText": "must be two times smaller than the setting 'time [s] after a device is set to offline' on tab clients!",
					"tooltip": "must be two times smaller than the setting 'time [s] after a device is set to offline' on tab clients!",
					"validatorNoSaveOnError": true,
					"newLine": true,
					"min": 0,
					"max": 10000,
					"step": 1,
					"sm": 12,
					"md": 3
				},
				"keepIobSynchron": {
					"type": "checkbox",
					"label": "keep unifi-controller and ioBroker synchronized",
					"help": "states are deleted when they are deleted in the unifi-controller",
					"sm": 12,
					"md": 3
				},
				"dividerApi": {
					"newLine": true,
					"type": "header",
					"text": "api",
					"size": 2
				},
				"apiUpdateInterval": {
					"type": "number",
					"label": "api poll interval",
					"newLine": true,
					"min": 5,
					"max": 10000,
					"sm": 12,
					"md": 3
				},
				"wlanConfigEnabled": {
					"type": "checkbox",
					"label": "wlan configuration enabled",
					"newLine": true,
					"sm": 12,
					"md": 2
				},
				"lanConfigEnabled": {
					"type": "checkbox",
					"label": "lan configuration enabled",
					"newLine": true,
					"sm": 12,
					"md": 2
				}
			}
		},
		"tab_devices": {
			"type": "panel",
			"label": "Devices",
			"items": {
				"donation_link": {
					"type": "staticLink",
					"text": "You like the adapter? Then support me.",
					"sm": 12,
					"button": true,
					"newLine": true,
					"href": "https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&hosted_button_id=VWAXSTS634G88&source=url",
					"style": {
						"justifyContent": "flex-start !important"
					}
				},
				"dividerDevices": {
					"newLine": true,
					"type": "header",
					"text": "unifi devices (realtime api)",
					"size": 2
				},
				"devicesEnabled": {
					"type": "checkbox",
					"label": "enabled",
					"sm": 12,
					"md": 2
				},
				"deviceImageDownload": {
					"type": "checkbox",
					"label": "download images",
					"disabled": "!data.devicesEnabled",
					"sm": 12,
					"md": 2
				},
				"deviceBlackList": {
					"newLine": true,
					"type": "table",
					"xl": 6,
					"lg": 6,
					"md": 6,
					"sm": 12,
					"xs": 12,
					"hidden": "!data.devicesEnabled",
					"uniqueColumns": [
						"mac"
					],
					"confirm": {
						"condition": "!_alive",
						"title": "Attention!",
						"text": "This selection is only possible with a running instance!",
						"ok": "Got it!",
						"cancel": "cancel",
						"type": "warning"
					},
					"items": [
						{
							"type": "autocompleteSendTo",
							"title": "Choose which device should be excluded",
							"attr": "mac",
							"filter": true,
							"sort": true,
							"noMultiEdit": true,
							"jsonData": "{\"instanceID\": \"${globalData.instanceID}\",\"adapter\": \"${globalData.adapter}\"}",
							"command": "deviceList"
						}
					]
				},
				"deviceStatesBlackList": {
					"type": "table",
					"xl": 6,
					"lg": 6,
					"md": 6,
					"sm": 12,
					"xs": 12,
					"hidden": "!data.devicesEnabled",
					"uniqueColumns": [
						"id"
					],
					"confirm": {
						"condition": "!_alive",
						"title": "Attention!",
						"text": "This selection is only possible with a running instance!",
						"ok": "Got it!",
						"cancel": "cancel",
						"type": "warning"
					},
					"items": [
						{
							"type": "autocompleteSendTo",
							"title": "Choose which device state should be excluded",
							"attr": "id",
							"filter": true,
							"sort": true,
							"noMultiEdit": true,
							"jsonData": "{\"instanceID\": \"${globalData.instanceID}\",\"adapter\": \"${globalData.adapter}\"}",
							"command": "deviceStateList"
						}
					]
				}
			}
		},
		"tab_clients": {
			"type": "panel",
			"label": "Clients",
			"items": {
				"donation_link": {
					"type": "staticLink",
					"text": "You like the adapter? Then support me.",
					"sm": 12,
					"button": true,
					"newLine": true,
					"href": "https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&hosted_button_id=VWAXSTS634G88&source=url",
					"style": {
						"justifyContent": "flex-start !important"
					}
				},
				"dividerClients": {
					"newLine": true,
					"type": "header",
					"text": "clients / guests / vpn (realtime api)",
					"size": 2
				},
				"clientsEnabled": {
					"type": "checkbox",
					"label": "clients enabled",
					"newLine": true,
					"sm": 12,
					"md": 2
				},
				"deleteClientsOlderThan": {
					"type": "number",
					"label": "delete clients who have not been online for x days (0 = deactivated)",
					"disabled": "!data.clientsEnabled",
					"min": 0,
					"step": 1,
					"sm": 12,
					"md": 3
				},
				"clientOfflineTimeout": {
					"type": "number",
					"label": "time [s] after a device is set to offline",
					"disabled": "!data.clientsEnabled && !data.guestsEnabled",
					"help": "Fallback solution if realtime api does not communicate an event",
					"validator": "(data.clientOfflineTimeout / 2) > data.realTimeApiDebounceTime",
					"validatorErrorText": "must be two times bigger than 'debounce time' on tab general!",
					"tooltip": "must be two times bigger than 'debounce time' on tab general!",
					"validatorNoSaveOnError": true,
					"min": 92,
					"max": 10000,
					"step": 1,
					"sm": 12,
					"md": 3
				},
				"guestsEnabled": {
					"type": "checkbox",
					"label": "guests enabled",
					"newLine": true,
					"sm": 12,
					"md": 2
				},
				"deleteGuestsOlderThan": {
					"type": "number",
					"label": "delete guests who have not been online for x days (0 = deactivated)",
					"disabled": "!data.guestsEnabled",
					"min": 0,
					"step": 1,
					"sm": 12,
					"md": 3
				},
				"vpnEnabled": {
					"type": "checkbox",
					"label": "vpn clients enabled",
					"newLine": true,
					"sm": 12,
					"md": 2
				},
				"vpnOfflineTimeout": {
					"type": "number",
					"label": "time [s] after a VPN device is set to offline",
					"disabled": "!data.vpnEnabled",
					"validator": "(data.vpnOfflineTimeout / 2) > data.realTimeApiDebounceTime",
					"validatorErrorText": "must be two times bigger than 'debounce time' on tab general!",
					"tooltip": "must be two times bigger than 'debounce time' on tab general!",
					"validatorNoSaveOnError": true,
					"min": 92,
					"max": 10000,
					"step": 1,
					"sm": 12,
					"md": 3
				},
				"clientImageDownload": {
					"type": "checkbox",
					"label": "download images",
					"newLine": true,
					"disabled": "!data.clientsEnabled && !data.guestsEnabled && !data.vpnEnabled",
					"sm": 12,
					"md": 2
				},
				"clientBlackList": {
					"newLine": true,
					"type": "table",
					"xl": 6,
					"lg": 6,
					"md": 6,
					"sm": 12,
					"xs": 12,
					"hidden": "!data.clientsEnabled && !data.guestsEnabled",
					"uniqueColumns": [
						"mac"
					],
					"confirm": {
						"condition": "!_alive",
						"title": "Attention!",
						"text": "This selection is only possible with a running instance!",
						"ok": "Got it!",
						"cancel": "cancel",
						"type": "warning"
					},
					"items": [
						{
							"type": "autocompleteSendTo",
							"title": "Choose which client / guest should be excluded",
							"attr": "mac",
							"filter": true,
							"sort": true,
							"noMultiEdit": true,
							"jsonData": "{\"instanceID\": \"${globalData.instanceID}\",\"adapter\": \"${globalData.adapter}\"}",
							"command": "clientList"
						}
					]
				},
				"clientStatesBlackList": {
					"type": "table",
					"xl": 6,
					"lg": 6,
					"md": 6,
					"sm": 12,
					"xs": 12,
					"hidden": "!data.clientsEnabled && !data.guestsEnabled",
					"uniqueColumns": [
						"id"
					],
					"confirm": {
						"condition": "!_alive",
						"title": "Attention!",
						"text": "This selection is only possible with a running instance!",
						"ok": "Got it!",
						"cancel": "cancel",
						"type": "warning"
					},
					"items": [
						{
							"type": "autocompleteSendTo",
							"title": "Choose which client / guest state should be excluded",
							"attr": "id",
							"filter": true,
							"sort": true,
							"noMultiEdit": true,
							"jsonData": "{\"instanceID\": \"${globalData.instanceID}\",\"adapter\": \"${globalData.adapter}\"}",
							"command": "clientStateList"
						}
					]
				}
			}
		}
	}
}