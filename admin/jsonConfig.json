{
	"i18n": true,
	"type": "tabs",
	"items": {
		"tab_general": {
			"type": "panel",
			"label": "General",
			"items": {
				"donation_link": {
					"type": "staticLink",
					"text": "You like the adapter? Then support me.",
					"sm": 12,
					"button": true,
					"newLine": true,
					"href": "https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&hosted_button_id=VWAXSTS634G88&source=url",
					"style": {
						"justifyContent": "flex-start !important"
					}
				},
				"dividerCredentials": {
					"newLine": true,
					"type": "header",
					"text": "login data",
					"size": 2
				},
				"host": {
					"type": "text",
					"label": "host",
					"newLine": true,
					"sm": 12,
					"md": 3
				},
				"port": {
					"type": "number",
					"label": "port",
					"disabled": "data.isUnifiOs",
					"min": 0,
					"sm": 12,
					"md": 3
				},
				"isUnifiOs": {
					"type": "checkbox",
					"label": "is Unifi OS",
					"help": "enable this if you have a Unifi OS based network controller (e.g. UDM-Pro)",
					"sm": 12,
					"md": 6
				},
				"user": {
					"type": "text",
					"label": "Username",
					"newLine": true,
					"sm": 12,
					"md": 3
				},
				"password": {
					"type": "password",
					"label": "Password",
					"sm": 12,
					"md": 3
				},
				"site": {
					"type": "text",
					"label": "controller site",
					"help": "'default' is used by unifi-os (e.g. UDM-Pro)",
					"sm": 12,
					"md": 3
				},
				"dividerRealTimeApi": {
					"newLine": true,
					"type": "header",
					"text": "realtime api",
					"size": 2
				},
				"realTimeApiDebounceTime": {
					"type": "number",
					"label": "debounce time [s]",
					"help": "increase this value for low performance systems",
					"validator": "data.realTimeApiDebounceTime < (data.clientOfflineTimeout / 2)",
					"validatorErrorText": "must be two times smaller than the setting 'time [s] after a device is set to offline' on tab clients!",
					"tooltip": "must be two times smaller than the setting 'time [s] after a device is set to offline' on tab clients!",
					"validatorNoSaveOnError": true,
					"newLine": true,
					"min": 0,
					"max": 10000,
					"step": 1,
					"sm": 12,
					"md": 3
				},
				"keepIobSynchron": {
					"type": "checkbox",
					"label": "keep unifi-controller and ioBroker synchronized",
					"help": "states are deleted when they are deleted in the unifi-controller",
					"sm": 12,
					"md": 3
				},
				"dividerApi": {
					"newLine": true,
					"type": "header",
					"text": "api",
					"size": 2
				},
				"apiUpdateInterval": {
					"type": "number",
					"label": "api poll interval [s]",
					"newLine": true,
					"min": 5,
					"max": 10000,
					"sm": 12,
					"md": 3
				},
				"expert": {
					"type": "checkbox",
					"label": "show expert settings",
					"sm": 12,
					"md": 3
				},
			}
		},
		"tab_devices": {
			"type": "panel",
			"label": "Devices",
			"items": {
				"donation_link": {
					"type": "staticLink",
					"text": "You like the adapter? Then support me.",
					"sm": 12,
					"button": true,
					"newLine": true,
					"href": "https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&hosted_button_id=VWAXSTS634G88&source=url",
					"style": {
						"justifyContent": "flex-start !important"
					}
				},
				"dividerDevices": {
					"newLine": true,
					"type": "header",
					"text": "unifi devices (realtime api)",
					"size": 2
				},
				"devicesEnabled": {
					"type": "checkbox",
					"label": "enabled",
					"sm": 12,
					"md": 2
				},
				"deviceImageDownload": {
					"type": "checkbox",
					"label": "download images",
					"disabled": "!data.devicesEnabled",
					"sm": 12,
					"md": 2
				},
				"dividerDeviceBlackList": {
					"newLine": true,
					"type": "header",
					"text": "Unifi Devices Blacklist / Whitelist",
					"hidden": "!data.devicesEnabled",
					"size": 2
				},
				"deviceIsWhiteList": {
					"newLine": true,
					"type": "checkbox",
					"label": "${data.deviceIsWhiteList ? 'use as whitelist' : 'use as blacklist'}",
					"hidden": "!data.devicesEnabled",
					"xl": 2,
					"lg": 2,
					"md": 2,
					"sm": 12,
					"xs": 12
				},
				"deviceBlackList": {
					"type": "table",
					"xl": 6,
					"lg": 6,
					"md": 6,
					"sm": 12,
					"xs": 12,
					"hidden": "!data.devicesEnabled",
					"uniqueColumns": [
						"mac"
					],
					"confirm": {
						"condition": "!_alive",
						"title": "Attention!",
						"text": "This selection is only possible with a running instance!",
						"ok": "Got it!",
						"cancel": "cancel",
						"type": "warning"
					},
					"items": [
						{
							"type": "autocompleteSendTo",
							"title": "${data.deviceIsWhiteList ? 'Choose which unifi device should be included' : 'Choose which unifi device should be excluded'}",
							"attr": "mac",
							"filter": true,
							"sort": true,
							"noMultiEdit": true,
							"jsonData": "${instanceObj}",
							"command": "deviceList"
						}
					]
				},
				"dividerDeviceBlackListStates": {
					"newLine": true,
					"type": "header",
					"text": "States Blacklist / Whitelist",
					"hidden": "!data.devicesEnabled",
					"size": 2
				},
				"deviceStatesIsWhiteList": {
					"newLine": true,
					"type": "checkbox",
					"label": "${data.deviceStatesIsWhiteList ? 'use as whitelist' : 'use as blacklist'}",
					"hidden": "!data.devicesEnabled",
					"xl": 2,
					"lg": 2,
					"md": 2,
					"sm": 12,
					"xs": 12
				},
				"deviceStatesBlackList": {
					"type": "table",
					"xl": 6,
					"lg": 6,
					"md": 6,
					"sm": 12,
					"xs": 12,
					"hidden": "!data.devicesEnabled",
					"uniqueColumns": [
						"id"
					],
					"confirm": {
						"condition": "!_alive",
						"title": "Attention!",
						"text": "This selection is only possible with a running instance!",
						"ok": "Got it!",
						"cancel": "cancel",
						"type": "warning"
					},
					"items": [
						{
							"type": "autocompleteSendTo",
							"title": "${data.deviceStatesIsWhiteList ? 'Choose which state should be included' : 'Choose which state should be excluded'}",
							"attr": "id",
							"filter": true,
							"sort": true,
							"noMultiEdit": true,
							"jsonData": "{\"instanceID\": \"${_instance}\",\"adapter\": \"${globalData}\"}",
							"command": "deviceStateList"
						}
					]
				}
			}
		},
		"tab_clients": {
			"type": "panel",
