				},
				"clientsEnabled": {
					"type": "checkbox",
					"label": "clients enabled",
					"newLine": true,
					"sm": 12,
					"md": 2
				},
				"deleteClientsOlderThan": {
					"type": "number",
					"label": "delete clients who have not been online for x days (0 = deactivated)",
