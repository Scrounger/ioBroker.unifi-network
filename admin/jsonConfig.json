{
	"i18n": true,
	"type": "tabs",
	"items": {
		"tab_1": {
			"type": "panel",
			"label": "General",
			"items": {
				"donation_link": {
					"type": "staticLink",
					"text": "You like the adapter? Then support me.",
					"sm": 12,
					"button": true,
					"newLine": true,
					"href": "https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&hosted_button_id=VWAXSTS634G88&source=url",
					"style": {
						"justifyContent": "flex-start !important"
					}
				},
				"dividerCredentials": {
					"newLine": true,
					"type": "header",
					"text": "login data",
					"size": 2
				},
				"host": {
					"type": "text",
					"label": "host",
					"newLine": true,
					"sm": 12,
					"md": 3
				},
				"port": {
					"type": "number",
					"label": "port",
					"help": "port 443 is used by unifi-os (e.g. UDM-Pro)",
					"min": 0,
					"sm": 12,
					"md": 3
				},
				"site": {
					"type": "text",
					"label": "controller site",
					"help": "'default' is used by unifi-os (e.g. UDM-Pro)",
					"sm": 12,
					"md": 3
				},
				"user": {
					"type": "text",
					"label": "Username",
					"newLine": true,
					"sm": 12,
					"md": 3
				},
				"password": {
					"type": "password",
					"label": "Password",
					"sm": 12,
					"md": 3
				},
				"updateInterval": {
					"type": "number",
					"label": "update interval",
					"help": "increase this value for low performance systems",
					"newLine": true,
					"min": 0,
					"max": 10000,
					"step": 1,
					"sm": 12,
					"md": 3
				},
				"clientOfflineTimeout": {
					"type": "number",
					"label": "time [s] after a device is set to offline",
					"help": "increase this value for low performance systems",
					"min": 5,
					"max": 10000,
					"step": 1,
					"sm": 12,
					"md": 3
				},
				"clientImageDownload": {
					"type": "checkbox",
					"label": "download client images",
					"newLine": true,
					"sm": 12,
					"md": 2
				},
				"deviceImageDownload": {
					"type": "checkbox",
					"label": "download unifi device images",
					"sm": 12,
					"md": 2
				},
				"keepIobSynchron": {
					"type": "checkbox",
					"label": "keep unifi-controller and ioBroker synchronized",
					"help": "states are deleted when they are deleted in the unifi-controller",
					"sm": 12,
					"md": 3
				},
				"deleteClientsOlderThan": {
					"type": "number",
					"label": "delete clients who have not been online for x days (0 = deactivated)",
					"min": 0,
					"step": 1,
					"sm": 12,
					"md": 3
				}
			}
		}
	}
}