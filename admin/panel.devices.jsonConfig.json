{
	"label": "Devices",
	"items": {
		"donation_link": {
			"type": "staticLink",
			"text": "You like the adapter? Then support me.",
			"sm": 12,
			"button": true,
			"newLine": true,
			"href": "https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&hosted_button_id=VWAXSTS634G88&source=url",
			"style": {
				"justifyContent": "flex-start !important"
			}
		},
		"dividerDevices": {
			"newLine": true,
			"type": "header",
			"text": "unifi devices (realtime api)",
			"size": 2
		},
		"devicesEnabled": {
			"type": "checkbox",
			"label": "enabled",
			"sm": 12,
			"md": 2
		},
		"deviceImageDownload": {
			"type": "checkbox",
			"label": "download images",
			"disabled": "!data.devicesEnabled",
			"sm": 12,
			"md": 2
		},
		"dividerDeviceBlackList": {
			"newLine": true,
			"type": "header",
			"text": "Unifi Devices Blacklist / Whitelist",
			"hidden": "!data.devicesEnabled",
			"size": 2
		},
		"deviceIsWhiteList": {
			"newLine": true,
			"type": "checkbox",
			"label": "${data.deviceIsWhiteList ? 'use as whitelist' : 'use as blacklist'}",
			"hidden": "!data.devicesEnabled",
			"xl": 2,
			"lg": 2,
			"md": 2,
			"sm": 12,
			"xs": 12
		},
		"deviceBlackList": {
			"type": "table",
			"xl": 6,
			"lg": 6,
			"md": 6,
			"sm": 12,
			"xs": 12,
			"hidden": "!data.devicesEnabled",
			"uniqueColumns": [
				"mac"
			],
			"confirm": {
				"condition": "!_alive",
				"title": "Attention!",
				"text": "This selection is only possible with a running instance!",
				"ok": "Got it!",
				"cancel": "cancel",
				"type": "warning"
			},
			"items": [
				{
					"type": "autocompleteSendTo",
					"title": "${data.deviceIsWhiteList ? 'Choose which unifi device should be included' : 'Choose which unifi device should be excluded'}",
					"attr": "mac",
					"filter": true,
					"sort": true,
					"noMultiEdit": true,
					"jsonData": "${instanceObj}",
					"command": "deviceList"
				}
			]
		},
		"dividerDeviceBlackListStates": {
			"newLine": true,
			"type": "header",
			"text": "States Blacklist / Whitelist",
			"hidden": "!data.devicesEnabled",
			"size": 2
		},
		"deviceStatesIsWhiteList": {
			"newLine": true,
			"type": "checkbox",
			"label": "${data.deviceStatesIsWhiteList ? 'use as whitelist' : 'use as blacklist'}",
			"hidden": "!data.devicesEnabled",
			"xl": 2,
			"lg": 2,
			"md": 2,
			"sm": 12,
			"xs": 12
		},
		"deviceStatesBlackList": {
			"type": "table",
			"xl": 6,
			"lg": 6,
			"md": 6,
			"sm": 12,
			"xs": 12,
			"hidden": "!data.devicesEnabled",
			"uniqueColumns": [
				"id"
			],
			"confirm": {
				"condition": "!_alive",
				"title": "Attention!",
				"text": "This selection is only possible with a running instance!",
				"ok": "Got it!",
				"cancel": "cancel",
				"type": "warning"
			},
			"items": [
				{
					"type": "autocompleteSendTo",
					"title": "${data.deviceStatesIsWhiteList ? 'Choose which state should be included' : 'Choose which state should be excluded'}",
					"attr": "id",
					"filter": true,
					"sort": true,
					"noMultiEdit": true,
					"jsonData": "{\"instanceID\": \"${_instance}\",\"adapter\": \"${globalData}\"}",
					"command": "deviceStateList"
				}
			]
		}
	}
}